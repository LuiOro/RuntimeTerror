# Importing required libraries
import random

# Creating responses for the chat bot
responses = {
    "hello": ["Hi there!", "Hello!", "Hi!"],
    "how are you": ["I'm doing well, thank you.", "I'm fine, thanks for asking.", "I'm great!"],
    "what's your name": ["My name is ChatBot.", "I'm ChatBot."],
    "bye": ["Goodbye!", "Bye!", "See you soon!"]
}

# Defining a function for the chat bot to respond to user's input
def chat():
    while True:
        user_input = input("You: ")
        user_input = user_input.lower()
        
        if user_input == "quit":
            break
            
        if user_input in responses:
            bot_response = random.choice(responses[user_input])
            print("ChatBot:", bot_response)
        else:
            print("ChatBot: Sorry, I didn't understand what you said.")
            
# Starting the chat bot
print("Welcome to ChatBot! Type 'quit' to exit.")
chat()

