import random

# Define some responses to specific input
responses = {
    "hello": ["Hello!", "Hi there!", "Hey!"],
    "how are you?": ["I'm good, thanks for asking!", "I'm doing well, how about you?", "I'm great, how are you doing?"],
    "what's your name?": ["My name is ChatBot!", "I'm ChatBot, nice to meet you!", "I go by the name ChatBot."],
    "bye": ["Goodbye!", "See you later!", "Until next time!"]
}

# Define a function to generate a response to user input
def generate_response(input_text):
    input_text = input_text.lower()
    for key in responses:
        if key in input_text:
            return random.choice(responses[key])
    return "I'm sorry, I don't understand what you're asking."

# Main loop to read user input and generate responses
while True:
    user_input = input("You: ")
    if user_input.lower() == 'quit':
        break
    response = generate_response(user_input)
    print("ChatBot:", response)
